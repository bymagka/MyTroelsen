<Window x:Class="BinaryResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryResourcesApp"
        mc:Ignorable="d"
        Title="Fun with binary resources" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <ToolBar Height="60" DockPanel.Dock="Top" Name="picturePickerToolbar">
            <Button x:Name="btnPreviousPage" Height="40" Content="Previous" BorderBrush="Black" Width="100" Margin="5" Click="btnPreviousPage_Click"/>
            <Button x:Name="btnNextPage" Height="40" Content="Next" BorderBrush="Black" Width="100" Margin="5" Click="btnNextPage_Click"/>
        </ToolBar>
        <Border BorderBrush="Red" BorderThickness="2">
            <Image x:Name="myImage" Stretch="Fill"/>
        </Border>
    </DockPanel>
</Window>
