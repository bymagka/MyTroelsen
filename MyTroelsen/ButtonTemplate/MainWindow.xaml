<Window x:Class="ButtonTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="myButton" Width="100" Height="100" Click="myButton_Click" Background="AliceBlue"  Content="OK!" Template="{StaticResource RoundButtonTemplate}"/>
        <Button x:Name="Cancel" Width="100" Height="100" Content="Cancel!" Background="Green"   Template="{StaticResource RoundButtonTemplate}"/>
        <Button x:Name="Exit" Width="100" Height="100"  Content="Exit!"  Background="Brown"  Template="{StaticResource RoundButtonTemplate}"/>

    </StackPanel>
</Window>
